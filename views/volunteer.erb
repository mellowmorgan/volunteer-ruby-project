<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Volunteer Tracker</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/projects">Projects</a></li>
      <li class="active"><a href="/volunteers">Volunteers</a></li>
    </ul>
  </div>
</nav>
<div class="container">
  <h1><%= @volunteer.name %></h1>
  <div class="info-card">
    <h2>Update Volunteer</h2>
    <form method="post" action="/volunteers/<%= @volunteer.id %>" class="form">
      <input type="hidden" value="patch" name="_method"> 
      <div class="form-group">
        <label for="name">Name:</label>
        <input value="<%= @volunteer.name %>" type="text" class="form-control" id="name" name="name">
      </div>
      <div class="form-group">
        <label>Working on project:</label>
        <select class="form-control" name="project">
          <option selected value="<%= @volunteer.project_id %>"><%= @project_title %></option>
          <% if @projects.any? %>
            <% @projects.each do |project| %>
            <option value="<%= project.id %>"><%= project.title %></option>
            <% end %>
          <% end %>
        </select>
      </div>
      <button type="submit" class="btn btn-secondary">Update Volunteer</button>
    </form>  
    <form class="form" action="/volunteers/<%= @volunteer.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </div>
  
</div>