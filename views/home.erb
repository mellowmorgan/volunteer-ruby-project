<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Volunteer Tracker</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
      <li><a href="/projects">Projects</a></li>
      <li><a href="/volunteers">Volunteers</a></li>
    </ul>
  </div>
</nav>
<div class="container">
  <h1>Volunteer Tracker</h1>
  <div class="info-card">
    <div class="row">
      <div class="col-md-6">
        <h2>Projects</h2>
        <% if @projects.any? %>  
        <ul>
          <% @projects.each do |project| %>
          <li><%= project.title %></li>
          <% end %>
        </ul>
        <% else %>
          <p>No projects to display</p>
        <% end %>
      </div>
      <div class="col-md-6">
        <h2>Volunteers</h2>
        <% if @volunteers.any? %>  
        <ul>
          <% @volunteers.each do |volunteer| %>
          <li><%= volunteer.name %></li>
          <% end %>
        </ul>
        <% else %>
        <p>No volunteers to display</p>
        <% end %>
      </div>
    </div>
  </div>
  <p>Visit the navbar tabs to add, update, and delete projects and volunteers.</p>
</div>